        "usernameLabel": {
          "en": "Email",
          "fi": "Sähköposti"
        },
        "usernamePlaceholder": {
          "en": "your@email.com",
          "fi": "sinun@sahkoposti.fi"
        },
        "passwordLabel": {
          "en": "Password",
          "fi": "Salasana"
        },
        "passwordPlaceholder": {
          "en": "Password",
          "fi": "Salasana"
        }
      }
    },
    {
